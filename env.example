# Environment Variables for Craft App
# Copy this file to .env.local for development or .env.production for production

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# PDF Service Configuration
PDF_SERVICE_URL=http://localhost:8000

# Database Configuration (if using direct database connection)
DATABASE_URL=postgresql://username:password@localhost:5432/craft_app

# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Application Configuration
NODE_ENV=development
PORT=3000
